<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui top attached segment">
    <div class="ui huge header center aligned">
      <h1><%= blog.title %></h1>
    </div>
    <div class="ui container right aligned">
      <div class="ui label">
        <p><span>Created on:</span> <%= blog.created.toDateString() %></p>
      </div>
    </div>
    <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
    <div class="ui hidden divider"></div>
    <div class="description"><%- blog.body %></div>
    <div class="ui hidden divider"></div>
    <!-- Buttons -->
    <div class="ui grid">
      <div class="four column row">
        <div class="left floated column">
            <div class="ui buttons">
              <a class="ui button" href="/blogs">Back</a>
              <div class="or"></div>
              <a class="ui primary button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            </div>
        </div>
        <div class="right floated column right aligned">
          <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui negative button">DELETE</button>
          </form>
        </div>
      </div>
    </div>
    <div class="ui hidden divider"></div>
  </div>
</div>

<% include ./partials/footer %>